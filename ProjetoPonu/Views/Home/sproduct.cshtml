                    <div class="star"> <!--Classificação dos produtos / estelinhas-->
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                    <h4>R$215,00</h4> <!--Preço do produto-->
                </div>
                <a href="#"><i class="fa-solid fa-cart-shopping"></i></a> <!--Colocando o icone de adicionar carrinho-->
            </div>

            <!--Produto 3-->
            <div class="pro">
                <img src="~/img/products/e1.jpg" alt="">
                <div class="des"> <!--Descrição dos produtos e suas categoria-->
                    <span>rosto</span>
                    <h5>Hidratante Facial Orvalho</h5>
                    <div class="star"> <!--Classificação dos produtos / estelinhas-->
                        <i class="fas fa-star"></i>
